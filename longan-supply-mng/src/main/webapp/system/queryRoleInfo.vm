<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
	#parse("common/common.vm")
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/admin-all.css" />
	<link rel="stylesheet" type="text/css" href="$!staticServer/css/doubleDate.css" />
    <script type="text/javascript" src="$!staticServer/js/jquery-1.7.2.js"></script>
    <script type="text/javascript" src="$!staticServer/js/jquery-ui-1.8.22.custom.min.js"></script>
    <link rel="stylesheet" type="text/css" href="$!staticServer/css/ui-lightness/jquery-ui-1.8.22.custom.css" />
    <script type="text/javascript" src="$!staticServer/js/tip.js"></script>
	<script type="text/javascript" src="$!staticServer/js/doubleDate2.0.js"></script>
	
</head>
<body>
	$!errorMsg
    <div></div>
    <div class="alert alert-info">当前位置<b class="tip"></b>系统管理<b class="tip"></b>角色信息查询</div>
	 <form id="roleInfoQueryForm" action="queryRoleInfo.do" method="post">
			#parse("common/select.vm")
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <td colspan="8" class="auto-style2">&nbsp;请填写查询条件 </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>角色注释</td>
                    <td class="detail ">
                        <input name="roleDesc" value="$!roleInfoQuery.roleDesc"  />
                    </td>			
                    <td>状态 </td>
                    <td>
						#select($!statusList,'status',$!roleInfoQuery.status)
					</td>
                </tr>
    
                <tr>
                    <td colspan="8" align="right">
                        <input class="btn btn-inverse" id="find" type="submit" value="查询" />
                        <input class="btn btn-inverse" type="reset" value="清空" />
						<a href="roleInfoAdd.do" class="btn btn-primary add" >新增角色</a>
					</td>
                </tr>
            </tbody>
         </table>

	<table class="table table-striped table-bordered table-condensed" id="list">
        <thead>
            <tr class="tr_detail">
                <td>角色编号 </td>
				<td>角色名称</td>			
                <td>角色注释</td>
                <td>状态 </td>
                <td></td>
            </tr>
        </thead>
        <tbody>
			#foreach($!roleInfo in $!roleInfoList)
				<tr>
                <td>$!roleInfo.id</td>
                <td>$!roleInfo.roleName</td>
                <td>$!roleInfo.roleDesc</td>
				<td>
					<font #if($!roleInfo.showRed())color=red #end #if($!roleInfo.showGreen())color=green #end >
					$!roleInfo.statusDesc
					</font>
				</td>
				<td>
					<a href="roleInfoEdit.do?id=$!roleInfo.id" class="btn btn-mini btn-primary add" >修改</a>
					<a href="operationRoleRelationSet.do?id=$!roleInfo.id" class="btn btn-mini btn-primary add" >权限设置</a>
				</td>
            </tr>
			#end
			
			#parse("common/pagination.vm")
			#pagination($!roleInfoQuery,'roleInfoQueryForm')
        </tbody>
    </table>
	
	</form>
	 
	<script type="text/javascript">
    	$(function(){
    	$('.doubledate').kuiDate({
    		className:'doubledate',
    		isDisabled: "1"
    	});
    	});
		
	
    </script>
</body>
</html>
